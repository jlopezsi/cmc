# correspondence analyis and plots
descrip<-read.table("2descrip.txt", header=TRUE, sep="")
motives<-read.table("2motives.txt", header=TRUE, sep="")
motives3<-read.table("3motives.txt", header=TRUE, sep="")
behavior<-read.table("2behavior.txt", header=TRUE, sep="")
behavior3<-read.table("3behavior.txt", header=TRUE, sep="")
behavior4<-read.table("3behavior.txt", header=TRUE, sep="")
behavior5<-read.table("5behavior.txt", header=TRUE, sep="")
ADE4 package
require(ade4)
2
descrip.coa<-dudi.coa(descrip, nf=2)
score(descrip.coa)
plot(descrip.coa)
s.label(descrip.coa$li, clab=0.6)
s.label(descrip.coa$co, clab=0.6)

library(MASS)

##MASS packages
motives.corresp<-corresp(motives, nf=2)
behavior.corresp<-corresp(behavior, nf=2)
behavior3.corresp<-corresp(behavior3, nf=2)
descrip.corresp<-corresp(descrip, nf=2)
plot(behavior.corresp)
plot(behavior3.corresp)
plot(motives.corresp)
plot(descrip.corresp)


# paclages ca Greenacre
library(ca)
summary(ca(descrip))
plot(ca(descrip), map="symbiplot", mass=c(TRUE, TRUE), contrib=c("absolute", "absolute"))
plot(ca(behavior), map="symbiplot", mass=c(TRUE, TRUE), contrib=c("absolute", "absolute"))
plot(ca(behavior4), map="symbiplot", mass=c(TRUE, TRUE), contrib=c("absolute", "absolute"))
plot(ca(behavior5), map="symbiplot", mass=c(TRUE, TRUE), contrib=c("absolute", "absolute"))
summary(ca(behavior5))
summary(ca(motives3))
plot(ca(motives3), map="symbiplot", mass=c(TRUE, TRUE), contrib=c("absolute", "absolute"))

plot(ca(motives), map="symbiplot")
plot(ca(motives), map="colprincipal")
plot(ca(motives), map="rowprincipal")
plot(ca(motives), map="rowgab")